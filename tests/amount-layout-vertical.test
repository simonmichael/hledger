# amount layout tests, using default vertical layout
# 1. print
hledgerdev -f - print
<<<
2010/1/1
    a  EUR 1  ; a euro
    b  USD 1  ; a dollar
    c         ; a euro and a dollar
>>>
2010/01/01
    a         EUR 1  ; a euro
    b         USD 1  ; a dollar
             EUR -1
    c        USD -1  ; a euro and a dollar

>>>=0

# 2. register
hledgerdev -f - register
<<<
2010/1/1
    a  EUR 1  ; a euro
    b  USD 1  ; a dollar
    c         ; a euro and a dollar
>>>
2010/01/01                      a                             EUR 1        EUR 1
                                                                           EUR 1
                                b                             USD 1        USD 1
                                                             EUR -1             
                                c                            USD -1            0
>>>=0

# 3. balance
hledgerdev -f - balance
<<<
2010/1/1
    a  EUR 1  ; a euro
    b  USD 1  ; a dollar
    c         ; a euro and a dollar
>>>
               EUR 1  a
               USD 1  b
              EUR -1  
              USD -1  c
--------------------
                   0
>>>=0

