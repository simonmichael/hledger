# Rewrite rule within journal
hledger rewrite -f- date:2017/1  --add-posting 'Here comes Santa  $0'
<<<
= ^assets:bank$ date:2017/1 amt:<0
    assets:bank  *0.008
    expenses:fee  *-0.008  ; cash withdraw fee
= ^expenses:housing
    (budget:housing)  *-1
= ^expenses:grocery ^expenses:food
    (budget:food)  *-1

2016/12/31
    expenses:housing  $600
    assets:cash

2017/1/1
    expenses:food  $20
    expenses:leisure  $15
    expenses:grocery  $30
    assets:cash

2017/1/2
    assets:cash  $200.00
    assets:bank

2017/2/1
    assets:cash  $100.00
    assets:bank

; order with normal entries doesn't matter
; but relative order matters to refer-rewritten transactions
= ^expenses not:housing not:grocery not:food
    (budget:misc)  *-1
>>>
2016/12/31
    expenses:housing         $600.00
    (budget:housing)        $-600.00
    assets:cash

2017/01/01
    expenses:food             $20.00
    (budget:food)            $-20.00
    Here comes Santa               0
    expenses:leisure          $15.00
    (budget:misc)            $-15.00
    Here comes Santa               0
    expenses:grocery          $30.00
    (budget:food)            $-30.00
    Here comes Santa               0
    assets:cash
    Here comes Santa               0

2017/01/02
    assets:cash              $200.00
    Here comes Santa               0
    assets:bank
    assets:bank               $-1.60
    expenses:fee               $1.60  ; cash withdraw fee
    (budget:misc)             $-1.60
    Here comes Santa               0

2017/02/01
    assets:cash         $100.00
    assets:bank

>>>2
>>>=0

# Rewrite using diff output
hledger rewrite --diff -f- assets:bank and 'amt:<0' --add-posting 'expenses:fee  $5'  --add-posting 'assets:bank  $-5'
<<<
2016/01/01 withdraw
    assets:cash              $20
    assets:bank

2016/01/02 withdraw
    assets:cash
    assets:bank             $-30
>>>
