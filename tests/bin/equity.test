>>>=0

# Verify effect of period
runghc ../../bin/hledger-equity.hs -f- -p 2016 assets liabilities
<<<
2015/12/31 open
    assets:bank         $100
    assets:cash         $20
    equity:opening

2016/1/15 spend
    expenses:sweets     $5
    assets:cash

2016/1/19 withdraw
    assets:cash         $20
    assets:bank

2017/1/1 lend
    liabilities         $25
    assets:cash
>>>
2016/12/31 closing balances
    assets:bank                       $20 = $0
    assets:cash                      $-15 = $0
    equity:closing balances

2017/01/01 opening balances
    assets:bank                      $-20 = $-20
    assets:cash                       $15 = $15
    equity:opening balances

>>>=0

