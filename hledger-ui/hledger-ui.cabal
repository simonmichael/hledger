build-type:     Simple
tested-with:    GHC==7.8.4, GHC==7.10.3

extra-source-files:
    CHANGES
    README

source-repository head
  type: git
  location: https://github.com/simonmichael/hledger

flag threaded
  default: True
  description:
    Build with support for multithreaded execution

