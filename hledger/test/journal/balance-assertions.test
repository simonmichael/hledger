$ hledger -f - stats
> /Transactions/
>=0

# 10. Multiple assertions and assignments for an account in the same transaction.
<
2013/1/1
  a    $1  =$1
  b        =-$1

2013/1/3
  a    $6  = $7
  b   $-1  = $-2
  b   $-1  = $-3
  b   $-7    = $-10
  b   $-1
  b   $-1  = $-12
  b

2013/1/4
  a    $0 = $7
  b   $0   = $-7

2013/1/5
  (c)    100 A

2013/1/5
  c      = 50 B
  c      = 50 A

$ hledger -f - stats
> /Transactions/
>=0

# 11. Assignments and virtual postings
<
2013/1/1
  b
  [a]    1$
  (b)     = $14
  [b]
  a      4$


2013/1/2
  [a]      = $5
  b        = $9

$ hledger -f - stats
> /Transactions/
>=0
# 12. Having both assignments and posting dates is not supported.
<
2013/1/1
  a    $1  =$1
  b         =$-1  ; date:2012/1/1

$ hledger -f - stats
>2  /balance assignments may not have a custom date/
>=1

