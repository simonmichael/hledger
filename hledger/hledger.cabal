                  Hledger.Cli.Format
                  Hledger.Cli.Options
                  Hledger.Cli.Tests
                  Hledger.Cli.Utils
                  Hledger.Cli.Version
                  Hledger.Cli.Add
                  Hledger.Cli.Balance
                  Hledger.Cli.Convert
                  Hledger.Cli.Histogram
                  Hledger.Cli.Print
                  Hledger.Cli.Register
                  Hledger.Cli.Reports
                  Hledger.Cli.Stats
  -- should be the same as below
  build-depends:
                  hledger-lib == 0.15
                 ,base >= 3 && < 5
                 ,containers
                 ,cmdargs >= 0.7   && < 0.8
                 ,csv
                 ,directory
                 ,filepath
                 ,haskeline == 0.6.*
                 ,HUnit
                 ,mtl
                 ,old-locale
                 ,old-time
                 ,parsec
                 ,process
                 ,regexpr >= 0.5.1
                 ,safe >= 0.2
                 ,split == 0.1.*
                 ,time
                 ,utf8-string >= 0.3.5 && < 0.4

-- should depend on the above to avoid double compilation but this is
