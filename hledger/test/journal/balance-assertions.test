  a           =$1.3
  b

2013/1/2
  a           $10 =$11.3
  b         =$-11.3

$ hledger -f - stats
> /Transactions/
>=0


# 9. Multiple assertions for an account in the same transaction.
<
2013/1/1
  a    $1  =$1
  b        =-$1

2013/1/2
  a    $1  =$2
  b   $-1  =$-2

2013/1/3
  a    $2  = $4
