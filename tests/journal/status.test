# 1. the status field can contain nothing,
hledger -f- print
<<<
2015/1/1 x
  (a)  1
>>>
2015/01/01 x
    (a)             1

>>>=0

# 2. or !
hledger -f- print
<<<
2015/1/1 ! x
  (a)  1
>>>
2015/01/01 ! x
    (a)             1

>>>=0

# 3. or *
hledger -f- print
<<<
2015/1/1 * x
  (a)  1
>>>
2015/01/01 * x
    (a)             1

>>>=0

# 4. --cleared matches * only
hledger -f- print --cleared
<<<
2015/1/1 x
  (a)  1
2015/1/1 ! x
  (b)  1
2015/1/1 * x
  (c)  1
>>>
2015/01/01 * x
    (c)             1

>>>=0

# 5. --pending matches ! only
hledger -f- print --pending
<<<
2015/1/1 x
  (a)  1
2015/1/1 ! x
  (b)  1
2015/1/1 * x
  (c)  1
>>>
2015/01/01 ! x
    (b)             1

>>>=0

# 6. --uncleared matches all except *
hledger -f- print --uncleared
<<<
2015/1/1 x
  (a)  1
2015/1/1 ! x
  (b)  1
2015/1/1 * x
  (c)  1
>>>
2015/01/01 x
    (a)             1

2015/01/01 ! x
    (b)             1

>>>=0

# 7. --not-pending matches all except !
hledger -f- print --not-pending
<<<
2015/1/1 x
  (a)  1
2015/1/1 ! x
  (b)  1
2015/1/1 * x
  (c)  1
>>>
2015/01/01 x
    (a)             1

2015/01/01 * x
    (c)             1

>>>=0

# 8. status: only matches no status
hledger -f- print status:
<<<
2015/1/1 x
  (a)  1
2015/1/1 ! x
  (b)  1
2015/1/1 * x
  (c)  1
>>>
2015/01/01 x
    (a)             1

>>>=0
